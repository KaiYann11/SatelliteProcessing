{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Storage": {
    "Mode": "JsonFile",
    "DataDirectory": "SharedData",
    "MaxEventCount": 5000
  },
  "Queue": {
    "Mode": "File",
    "DataDirectory": "SharedData",
    "PollIntervalMs": 500
  },
  "StageSimulation": {
    "DefaultMinDelayMs": 400,
    "DefaultMaxDelayMs": 1500,
    "DefaultFailureRate": 0.05
  }
}
